#!/bin/sh
# postinst script for Karaf
# based on script for sensu: https://github.com/sensu/sensu-build/blob/master/pkg_scripts/deb/postinst

set -e

NAME="karaf"
GROUP=$NAME
USER=$NAME


# summary of how this script can be called and ordering:
#  http://www.debian.org/doc/debian-policy/ch-maintainerscripts.html
#  http://www.proulx.com/~bob/debian/hints/DpkgScriptOrder

create_karaf_user_group() {
    if ! getent group $GROUP >/dev/null ; then
        # Adding system group
        addgroup --system $GROUP >/dev/null
    fi

    # creating karaf user if he isn't already there
    if ! getent passwd $USER >/dev/null ; then
            # Adding system user
            adduser \
              --system \
              --disabled-login \
              --ingroup $GROUP \
              --gecos "Karaf service user" \
              --shell /bin/false \
              $USER  >/dev/null
    fi
}


chown_karaf_dirs() {
    chown -R $USER:$GROUP /etc/karaf
    chown -R $USER:$GROUP /var/lib/karaf
    chown $USER:$GROUP /var/log/karaf
    chown -R $USER:$GROUP /usr/local/karaf
    chmod 755 /lib/systemd/system/karaf.service
    chmod 755 /lib/systemd/system/karaf@.service
    if [ -d "/usr/local/karaf/etc" ]; then
      mv /usr/local/karaf/etc/* /etc/karaf/
      rmdir /usr/local/karaf/etc
    fi
    ln -s /etc/karaf /usr/local/karaf/etc
    chown $USER:$GROUP /usr/local/karaf/etc
}


# Delete config files during uninstall and upgrade
KARAF_CONF_FILES="\
 all.policy \
 config.properties \
 custom.properties \
 distribution.info \
 equinox-debug.properties \
 java.util.logging.properties \
 jmx.acl.cfg \
 jmx.acl.java.lang.Memory.cfg \
 jmx.acl.org.apache.karaf.bundle.cfg \
 jmx.acl.org.apache.karaf.config.cfg \
 jmx.acl.org.apache.karaf.security.jmx.cfg \
 jmx.acl.osgi.compendium.cm.cfg \
 jre.properties \
 karaf.conf \
 keys.properties \
 org.apache.felix.eventadmin.impl.EventAdmin.cfg \
 org.apache.felix.fileinstall-deploy.cfg \
 org.apache.karaf.command.acl.bundle.cfg \
 org.apache.karaf.command.acl.config.cfg \
 org.apache.karaf.command.acl.feature.cfg \
 org.apache.karaf.command.acl.jaas.cfg \
 org.apache.karaf.command.acl.kar.cfg \
 org.apache.karaf.command.acl.scope_bundle.cfg \
 org.apache.karaf.command.acl.shell.cfg \
 org.apache.karaf.command.acl.system.cfg \
 org.apache.karaf.features.cfg \
 org.apache.karaf.features.repos.cfg \
 org.apache.karaf.jaas.cfg \
 org.apache.karaf.kar.cfg \
 org.apache.karaf.log.cfg \
 org.apache.karaf.management.cfg \
 org.apache.karaf.shell.cfg \
 org.ops4j.pax.logging.cfg \
 org.ops4j.pax.url.mvn.cfg \
 profile.cfg \
 scripts/shell.completion.script \
 shell.init.script \
 startup.properties \
 system.properties \
 users.properties"

for i in $KARAF_CONF_FILES ; do
    dpkg-maintscript-helper rm_conffile "/etc/karaf/${i}" "4.1.4-7" -- "$@"
done

case "$1" in
    configure)
        create_karaf_user_group
        chown_karaf_dirs
        deb-systemd-helper enable karaf.service
        systemctl daemon-reload
        if systemctl start karaf.service
        then
            echo "Started the karaf service"
        else
            echo "Failed to start karaf service"
        fi
        ;;

    abort-upgrade|abort-remove|abort-deconfigure)
        ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
        ;;
esac


exit 0
